@model IEnumerable<TaskManagement.WebApp.Models.TaskList>

<h1>Task Lists</h1>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var taskList in Model)
        {
            <tr>
                <td>@taskList.Name</td>
                <td>@taskList.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@taskList.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@taskList.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" href="/TaskLists/Create">Create New Task List</a>
